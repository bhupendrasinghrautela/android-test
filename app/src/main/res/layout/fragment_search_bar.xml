<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f00"
    >

    <Button
        android:id="@+id/fragment_search_bar_back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:background="@drawable/back_arrow"/>
    <com.pkmmte.view.CircularImageView
        android:id="@+id/fragment_search_bar_builder_image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/map"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:id="@+id/fragment_search_bar_property_info_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/fragment_search_bar_back_button"
        android:layout_toLeftOf="@id/fragment_search_bar_builder_image_view"
        android:orientation="vertical"
        android:visibility="gone" >
        <TextView
            android:id="@+id/fragment_search_bar_property_info_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u20B9 40L - \u20B9 45L 2 bhk apartment"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            />
        <TextView
            android:id="@+id/fragment_search_bar_property_address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sector-2, sohna road"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            />
    </LinearLayout>
    <SearchView
        android:id="@+id/fragment_search_bar_search_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/fragment_search_bar_back_button"
        android:layout_toLeftOf="@id/fragment_search_bar_builder_image_view"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"/>
</RelativeLayout>