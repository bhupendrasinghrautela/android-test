<?xml version="1.0" encoding="utf-8"?>
<com.makaan.ui.listing.GroupListingItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/serp_listing_cluster_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingBottom="@dimen/serp_listing_cluster_card_total_properties_margin_bottom">

    <View
        android:id="@+id/serp_listing_cluster_group_empty_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/serp_listing_cluster_card_empty_view_height"
        android:background="@color/white" />

    <TextView
        android:id="@+id/cluster_item_view_property_price_range_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/serp_listing_cluster_group_empty_view"
        android:layout_marginLeft="@dimen/serp_listing_cluster_card_properties_info_margin_left"
        android:layout_marginStart="@dimen/serp_listing_cluster_card_properties_info_margin_left"
        android:layout_marginTop="@dimen/serp_listing_cluster_card_properties_info_margin_top"
        android:text="40 to 45 L"
        android:textColor="@color/white"
        android:textSize="@dimen/serp_listing_cluster_card_properties_info_text_size"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/cluster_item_view_property_size_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cluster_item_view_property_price_range_text_view"
        android:layout_marginLeft="@dimen/serp_listing_cluster_card_properties_info_margin_left"
        android:layout_marginStart="@dimen/serp_listing_cluster_card_properties_info_margin_left"
        android:text="2 bhk"
        android:textColor="@color/white"
        android:textSize="@dimen/serp_listing_cluster_card_properties_info_text_size"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/cluster_item_view_property_type_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cluster_item_view_property_price_range_text_view"
        android:layout_toEndOf="@id/cluster_item_view_property_size_text_view"
        android:layout_toRightOf="@id/cluster_item_view_property_size_text_view"
        android:text=" apartment"
        android:textColor="@color/white"
        android:textSize="@dimen/serp_listing_cluster_card_properties_info_text_size"
        android:textAllCaps="false" />

    <View
        android:id="@+id/serp_listing_cluster_group_empty_view_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/serp_listing_cluster_card_empty_view_height"
        android:layout_below="@id/cluster_item_view_property_type_text_view"
        android:layout_marginTop="@dimen/serp_listing_cluster_card_empty_view_2_margin_top"
        android:background="@color/white"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/cluster_item_view_click_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/serp_listing_cluster_group_empty_view_2"
        android:layout_marginLeft="@dimen/serp_listing_cluster_card_total_properties_margin_left"
        android:layout_marginStart="@dimen/serp_listing_cluster_card_total_properties_margin_left"
        android:layout_marginTop="@dimen/serp_listing_cluster_card_total_properties_margin_top"
        android:text="100 listings"
        android:textColor="@color/white"
        android:textSize="@dimen/serp_listing_cluster_card_total_properties_text_size"
        android:textAllCaps="false" />

    <ImageView
        android:layout_width="@dimen/serp_listing_cluster_card_home_image_view_width"
        android:layout_height="@dimen/serp_listing_cluster_card_home_image_view_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/cluster_item_view_property_type_text_view"
        android:layout_marginEnd="@dimen/serp_listing_cluster_card_home_image_view_margin_right"
        android:layout_marginRight="@dimen/serp_listing_cluster_card_home_image_view_margin_right"
        android:layout_marginTop="@dimen/serp_listing_cluster_card_home_image_view_margin_top"
        android:src="@drawable/house"
        android:text="100 listings"
        android:textColor="@color/white"
        android:textSize="@dimen/serp_listing_cluster_card_total_properties_text_size" />
</com.makaan.ui.listing.GroupListingItemView>