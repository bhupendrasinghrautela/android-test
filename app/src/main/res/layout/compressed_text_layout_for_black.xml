<?xml version="1.0" encoding="utf-8"?>
<com.makaan.ui.CompressedTextView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/compressed_text_view"
    android:padding="@dimen/city_internal_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.makaan.ui.view.FontTextView
    android:id="@+id/header_text"
    android:gravity="center"
    android:textSize="@dimen/locality_text_big"
        font:fontName="comforta.ttf"
    android:text="@string/overview"
    android:textColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <com.makaan.ui.view.FontTextView
        android:id="@+id/content_text"
        android:layout_marginTop="@dimen/city_internal_margin"
        android:layout_width="match_parent"
        font:fontName="proxima-light.otf"
        android:textSize="@dimen/locality_text_medium"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:ellipsize="end"/>
    <com.makaan.ui.view.FontTextView
        android:id="@+id/read_more"
        android:layout_marginTop="@dimen/city_internal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        font:fontName="proxima.otf"
        android:textSize="@dimen/locality_text_medium"
        android:text="@string/read_more"/>
</com.makaan.ui.CompressedTextView>