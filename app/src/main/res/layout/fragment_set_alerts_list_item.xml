<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/fragment_set_alerts_list_item_padding_left"
    android:paddingStart="@dimen/fragment_set_alerts_list_item_padding_left"
    android:paddingTop="@dimen/fragment_set_alerts_list_item_padding_top"
    android:paddingBottom="@dimen/fragment_set_alerts_list_item_padding_bottom"
    android:paddingRight="@dimen/fragment_set_alerts_list_item_padding_right"
    android:paddingEnd="@dimen/fragment_set_alerts_list_item_padding_right"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/fragment_set_alerts_list_item_left_linear_layout"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fragment_set_alerts_list_item_image_view"
                android:layout_width="@dimen/fragment_set_alerts_list_item_image_view_width"
                android:layout_height="@dimen/fragment_set_alerts_list_item_image_view_height"
                android:layout_marginBottom="@dimen/fragment_set_alerts_list_item_image_view_margin_bottom"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/bed" />

            <TextView
                android:id="@+id/fragment_set_alerts_list_item_display_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="bedrooms"
                android:textColor="#999999"
                android:textSize="@dimen/fragment_set_alerts_list_item_display_text_text_size"
                android:typeface="monospace" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#33979797"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/fragment_set_alerts_list_item_content_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:text="sector 32, gugaon\naurangdeb akbar rdsdaaurangdeb akbar rdâ€¦"
            android:textSize="16sp"
            android:textColor="@color/listingBlack"
            android:typeface="serif"/>

    </LinearLayout>
</LinearLayout>