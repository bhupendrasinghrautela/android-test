<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="@dimen/fragment_upload_documents_upload_image_width"
            android:layout_height="@dimen/fragment_upload_documents_upload_image_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/fragment_upload_documents_upload_image_top_margin"
            android:scaleType="centerCrop"
            android:src="@drawable/upload" />

        <com.makaan.ui.view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="@dimen/fragment_upload_documents_upload_text_right_margin"
            android:layout_marginLeft="@dimen/fragment_upload_documents_upload_text_left_margin"
            android:layout_marginRight="@dimen/fragment_upload_documents_upload_text_right_margin"
            android:layout_marginStart="@dimen/fragment_upload_documents_upload_text_left_margin"
            android:layout_marginTop="@dimen/fragment_upload_documents_upload_text_top_margin"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="Upload documents \u0026 initiate the process"
            android:textColor="@color/black"
            android:textSize="@dimen/fragment_upload_documents_upload_text_text_size"
            app:fontName="comforta.ttf" />

        <!-- address proof -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/fragment_upload_documents_document_checklist_left_padding"
            android:paddingStart="@dimen/fragment_upload_documents_document_checklist_left_padding"
            android:paddingRight="@dimen/fragment_upload_documents_document_checklist_right_padding"
            android:paddingEnd="@dimen/fragment_upload_documents_document_checklist_right_padding"
            android:layout_marginTop="@dimen/fragment_upload_documents_document_checklist_top_margin">

            <FrameLayout
                android:layout_width="@dimen/fragment_upload_documents_document_checklist_image_view_width"
                android:layout_height="@dimen/fragment_upload_documents_document_checklist_image_view_height"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/check_tick_grey"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="1. Address Proof"
                android:singleLine="true"
                android:ellipsize="end"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:typeface="serif"/>
        </RelativeLayout>

        <!-- pan card -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/fragment_upload_documents_document_checklist_left_padding"
            android:paddingStart="@dimen/fragment_upload_documents_document_checklist_left_padding"
            android:paddingRight="@dimen/fragment_upload_documents_document_checklist_right_padding"
            android:paddingEnd="@dimen/fragment_upload_documents_document_checklist_right_padding"
            android:layout_marginTop="@dimen/fragment_upload_documents_document_checklist_top_margin">

            <FrameLayout
                android:layout_width="@dimen/fragment_upload_documents_document_checklist_image_view_width"
                android:layout_height="@dimen/fragment_upload_documents_document_checklist_image_view_height"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/check_tick_grey"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="2. Pan Card"
                android:singleLine="true"
                android:ellipsize="end"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:typeface="serif"/>
        </RelativeLayout>

        <!-- cancelled cheque -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/fragment_upload_documents_document_checklist_left_padding"
            android:paddingStart="@dimen/fragment_upload_documents_document_checklist_left_padding"
            android:paddingRight="@dimen/fragment_upload_documents_document_checklist_right_padding"
            android:paddingEnd="@dimen/fragment_upload_documents_document_checklist_right_padding"
            android:layout_marginTop="@dimen/fragment_upload_documents_document_checklist_top_margin">

            <FrameLayout
                android:layout_width="@dimen/fragment_upload_documents_document_checklist_image_view_width"
                android:layout_height="@dimen/fragment_upload_documents_document_checklist_image_view_height"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/check_tick_grey"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="3. Cancelled Cheque"
                android:singleLine="true"
                android:ellipsize="end"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:typeface="serif"/>
        </RelativeLayout>

        <!-- sell deed -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/fragment_upload_documents_document_checklist_left_padding"
            android:paddingStart="@dimen/fragment_upload_documents_document_checklist_left_padding"
            android:paddingRight="@dimen/fragment_upload_documents_document_checklist_right_padding"
            android:paddingEnd="@dimen/fragment_upload_documents_document_checklist_right_padding"
            android:layout_marginTop="@dimen/fragment_upload_documents_document_checklist_top_margin">

            <FrameLayout
                android:layout_width="@dimen/fragment_upload_documents_document_checklist_image_view_width"
                android:layout_height="@dimen/fragment_upload_documents_document_checklist_image_view_height"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/close_black"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="4. Sell Deed/Rental Agreement"
                android:singleLine="true"
                android:ellipsize="end"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:typeface="serif"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_upload_documents_action_button_top_margin"
            android:paddingLeft="@dimen/fragment_upload_documents_action_button_left_padding"
            android:paddingStart="@dimen/fragment_upload_documents_action_button_left_padding"
            android:paddingRight="@dimen/fragment_upload_documents_action_button_right_padding"
            android:paddingEnd="@dimen/fragment_upload_documents_action_button_right_padding"
            android:layout_marginBottom="@dimen/fragment_upload_documents_action_button_bottom_margin">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_red"
                android:text="cancel"
                android:textColor="@color/app_red"
                android:textSize="@dimen/fragment_upload_documents_action_button_text_size"
                android:textAllCaps="false"
                android:typeface="serif"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/fragment_upload_documents_submit_button_left_margin"
                android:layout_marginStart="@dimen/fragment_upload_documents_submit_button_left_margin"
                android:background="@drawable/filled_red"
                android:text="upload"
                android:textColor="@color/white"
                android:textSize="@dimen/fragment_upload_documents_action_button_text_size"
                android:textAllCaps="false"
                android:typeface="serif"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>