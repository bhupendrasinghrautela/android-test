<?xml version="1.0" encoding="utf-8"?>
<com.makaan.ui.property.AboutBuilderExpandedLayout
    android:id="@+id/about_builder_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/property_page_internal_padding"
    android:layout_height="match_parent">
    <com.makaan.ui.ExpandableLinearLayout
        android:id="@+id/builder_expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ael_expanded="false"
        android:orientation="vertical"
        >
        <com.android.volley.toolbox.FadeInNetworkImageView
            android:layout_width="@dimen/property_page_builder_logo_width"
            android:id="@+id/builder_logo"
            android:visibility="gone"
            android:layout_height="@dimen/property_page_builder_logo_height"/>
        <TextView
            android:id="@+id/builder_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_project_experience"
            android:textColor="@color/project_similar_projects_default_color"
            android:textSize="@dimen/project_text_small"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_project_experience_label"
                android:text="@string/project_experience_label"
                android:textColor="@color/project_similar_projects_light_color"
                android:textSize="@dimen/project_text_small"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_project_average_delay"
                android:textColor="@color/project_similar_projects_default_color"
                android:textSize="@dimen/project_text_small"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_project_average_delay_label"
                android:text="@string/project_average_delay_label"
                android:textColor="@color/project_similar_projects_light_color"
                android:textSize="@dimen/project_text_small"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_project_ongoing_delay"
                android:gravity="center_horizontal"
                android:textColor="@color/project_similar_projects_default_color"
                android:textSize="@dimen/project_text_small"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/tv_project_ongoing_label"
                android:text="@string/project_ongoing_label"
                android:textColor="@color/project_similar_projects_light_color"
                android:textSize="@dimen/project_text_small"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/project_past_margin_top"
        android:id="@+id/tv_project_past"
        android:gravity="center_horizontal"
        android:textColor="@color/project_similar_projects_default_color"
        android:textSize="@dimen/project_text_small"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_project_past_label"
        android:text="@string/project_past_label"
        android:gravity="center_horizontal"
        android:textColor="@color/project_similar_projects_light_color"
        android:textSize="@dimen/project_text_small"
        android:layout_marginBottom="@dimen/project_more_about_builder_margin_top"
        />

    </com.makaan.ui.ExpandableLinearLayout>

    <TextView
        android:id="@+id/about_builder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/appThemeRed"
        android:clickable="true"
        android:text="about builder"
        android:layout_gravity="start" />
</com.makaan.ui.property.AboutBuilderExpandedLayout>