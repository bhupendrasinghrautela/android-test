<?xml version="1.0" encoding="utf-8"?>
<com.makaan.ui.locality.TopAgentsView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_agents_card_height"
    card_view:cardCornerRadius="@dimen/top_agents_card_radius"
    card_view:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/agent_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/agent_image_height"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/agent_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_agent_left_margin"
            android:layout_marginTop="@dimen/agent_name_margin_top"
            android:gravity="center_vertical"
            android:text="sachin singh"
            android:textSize="@dimen/agent_name_text_size"
            android:textColor="@color/listingBlack"/>

        <TextView
            android:id="@+id/agent_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_agent_left_margin"
            android:text="investor clinic pvt. ltd."
            android:textColor="@color/listingLightGray"
            android:textSize="@dimen/agent_info_text_size"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/agent_sale_rent_count_layout_margin_top"
            android:layout_marginLeft="@dimen/top_agent_left_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/agent_sale_count"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/agent_sale_rent_count_text_size"
                android:text="19+"
                android:textColor="@color/listingBlack"/>

            <TextView
                android:id="@+id/agent_rent_count"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/agent_sale_rent_count_text_size"
                android:text="49+"
                android:textColor="@color/listingBlack"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_agent_left_margin"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:textSize="@dimen/agent_info_text_size"
                android:text="@string/property_for_sale_string"
                android:textColor="@color/listingLightGray"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:textSize="@dimen/agent_info_text_size"
                android:text="@string/property_for_rent_string"
                android:textColor="@color/listingLightGray"
                android:gravity="center_vertical"/>

        </LinearLayout>


        <TextView
            android:id="@+id/view_seller_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_seller_details_text_margin_top"
            android:layout_marginBottom="@dimen/view_seller_details_text_margin_bottom"
            android:gravity="center_horizontal"
            android:textColor="@color/appThemeRed"
            android:textSize="@dimen/median_price_text_size"
            android:text="@string/view_seller_details_string"/>

    </LinearLayout>

</com.makaan.ui.locality.TopAgentsView>