<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amenity_item_bg"
    android:padding="@dimen/amenity_item_padding">

    <TextView
        android:id="@+id/amenity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="12dp"
        android:textColor="@color/amenity_name_color"
        android:textSize="@dimen/amenity_name_text_size"/>

    <TextView
        android:id="@+id/amenity_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/amenity_distance_color"
        android:textSize="@dimen/amenity_name_text_size"/>

</RelativeLayout>