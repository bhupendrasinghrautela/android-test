<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/transparent">
    <ImageView android:layout_width="148dp"
               android:layout_height="178dp"
               android:layout_gravity="bottom|center_horizontal"
               android:id="@+id/hand_bottom"
               android:background="@drawable/hand_bottom"/>
    <ImageView android:layout_width="18dp"
               android:layout_height="18dp"
               android:layout_marginBottom="145dp"
               android:layout_gravity="bottom|center_horizontal"
               android:id="@+id/face"
               android:background="@drawable/face"/>
    <ImageView android:layout_width="35dp"
               android:layout_height="35dp"
               android:layout_marginLeft="20dp"
               android:layout_marginBottom="170dp"
               android:layout_gravity="bottom|center_horizontal"
               android:id="@+id/butterfly"
               android:background="@drawable/butterfly"/>
    <ImageView android:layout_width="168dp"
               android:layout_height="148dp"
               android:layout_gravity="right"
               android:layout_marginTop="80dp"
               android:layout_marginRight="5dp"
               android:id="@+id/yellow_text"
               android:background="@drawable/text_in_yellow"/>
    <ImageView android:layout_width="168dp"
               android:layout_height="148dp"
               android:id="@+id/green_text"
               android:layout_marginRight="15dp"
               android:layout_gravity="center_horizontal"
               android:background="@drawable/text_in_green"/>
    <ImageView
        android:id="@+id/m_badge"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/m"
    />
    <ImageView
        android:id="@+id/hi_m_badge"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/hi_m"
    />
</FrameLayout>