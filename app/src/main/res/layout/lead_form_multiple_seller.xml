<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:weightSum="2"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_weight="0.6"
        android:layout_height="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/multiple_lead_forn_bhk_apartment"
            android:src="@drawable/edit_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/multiple_lead_form_bhk_margin_bottom"
            android:textSize="@dimen/multiple_lead_form_bhk_text_size"
            android:textColor="@color/listingGray"/>

        <TextView
            android:id="@+id/mutltiple_lead_form_area"
            android:textColor="@color/seller_name_text_color"
            android:textSize="@dimen/multiple_lead_form_area_locality_text_size"
            android:layout_marginBottom="@dimen/multiple_lead_form_area_margin_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/mutltiple_lead_form_locality"
            android:textColor="@color/seller_name_text_color"
            android:textSize="@dimen/multiple_lead_form_area_locality_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.8"
        android:gravity="center_horizontal"
        android:layout_height="0dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/multiple_leadform_name"
            android:layout_width="@dimen/pyr_page_edit_text_width"
            android:layout_height="@dimen/pyr_page_edit_text_height"
            android:background="@drawable/edittext_bg_bottom_border"
            android:layout_marginBottom="@dimen/multiple_lead_form_name_margin_bottom"
            android:inputType="text"
            android:hint="@string/pyr_name"
            android:textColorHint="@color/pyr_grey"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/pyr_page_edit_text_text_size"
            />

        <EditText
            android:id="@+id/multiple_leadform_email"
            android:layout_width="@dimen/pyr_page_edit_text_width"
            android:layout_height="@dimen/pyr_page_edit_text_height"
            android:layout_marginBottom="@dimen/multiple_lead_form_email_margin_bottom"
            android:inputType="textEmailAddress"
            android:hint="@string/pyr_email"
            android:textColorHint="@color/pyr_grey"
            android:singleLine="true"
            android:background="@drawable/edittext_bg_bottom_border"
            android:textColor="@color/black"
            android:textSize="@dimen/pyr_page_edit_text_text_size"
            android:layout_marginTop="@dimen/lead_form_seller_image_margin_bottom"
            />

        <LinearLayout
            android:layout_width="@dimen/pyr_page_edit_text_width"
            android:layout_height="@dimen/pyr_page_edit_text_height"
            android:layout_marginTop="@dimen/lead_form_seller_image_margin_bottom"
            android:orientation="horizontal">
                <Spinner
                    android:id="@+id/multiple_lead_form_country_spinner"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/edittext_bg_bottom_border"
                    android:textSize="@dimen/spinner_text_size"
                    />
           <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:padding="1dp"
                android:layout_marginLeft="@dimen/lead_form_seller_image_margin_bottom"
                android:weightSum="1"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/multiple_leadform_country_code_textview"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="+91-"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/button_text_size"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/multiple_leadform_mobileno_edittext"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center"
                    android:inputType="number"
                    android:maxLength="10"
                    android:background="@drawable/edittext_bg_bottom_border"
                    android:hint="@string/pyr_mobile"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/button_text_size"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="0.6"
        android:layout_height="0dp"
        android:gravity="center">

        <View
            android:layout_width="@dimen/multiple_lead_form_call_button_orange_background"
            android:layout_height="@dimen/serp_listing_card_call_button_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/multiple_lead_form_call_button_orange_background_margin_end"
            android:layout_marginRight="@dimen/multiple_lead_form_call_button_orange_background_margin_end"
            android:layout_marginTop="@dimen/serp_listing_card_call_button_top_margin"
            android:background="@drawable/serp_listing_call_button_left_background" />

        <Button
            android:id="@+id/multiple_lead_form_get_call_back"
            android:layout_width="@dimen/serp_listing_card_call_button_width"
            android:layout_height="@dimen/serp_listing_card_call_button_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/serp_listing_card_call_button_right_margin"
            android:layout_marginRight="@dimen/serp_listing_card_call_button_right_margin"
            android:layout_marginTop="@dimen/serp_listing_card_call_button_top_margin"
            android:background="@drawable/lead_form_multiple_seller_drawable"
            android:text="@string/get_callback"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/serp_listing_card_call_button_text_size"
            android:typeface="serif" />
    </RelativeLayout>

</LinearLayout>