<?xml version="1.0" encoding="utf-8"?>
<com.makaan.ui.view.WishListButton
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"
    >

    <CheckBox
        android:id="@+id/shortlist_checkbox"
        android:layout_width="@dimen/serp_listing_card_property_shortlist_checkbox_width"
        android:layout_height="@dimen/serp_listing_card_property_shortlist_checkbox_height"
        android:background="@drawable/shortlist_checkbox_selector"
        android:button="@null" />

    <ProgressBar
        android:id="@+id/loading_progress"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/progressbar_color"
        android:layout_width="@dimen/progressbar_small"
        android:layout_height="@dimen/progressbar_small"
        android:layout_gravity="center_vertical"
        android:visibility="gone" />

</com.makaan.ui.view.WishListButton>