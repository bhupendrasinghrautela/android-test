<?xml version="1.0" encoding="utf-8"?>
<com.makaan.ui.amenity.AmenityCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/amenity_logo"
        android:layout_width="@dimen/amenity_type_logo_dimen"
        android:layout_height="@dimen/amenity_type_logo_dimen"
        android:layout_marginBottom="@dimen/amenity_type_logo_margin"/>

    <TextView
        android:id="@+id/amenity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/amenity_title_color"
        android:textSize="@dimen/amenity_type_text_size"/>

    <LinearLayout
        android:id="@+id/amenity_list"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</com.makaan.ui.amenity.AmenityCardView>