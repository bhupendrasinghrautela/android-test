<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/project_config_item_selected_stroke_color"
    />
    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="match_parent"
        android:baselineAligned="false">
<TextView android:layout_width="0dp" android:layout_height="wrap_content"
android:layout_weight="1"
          android:layout_margin="10dp"
          android:padding="10dp"
          android:gravity="center"
android:text="no properties available"/>
    <View android:layout_width="1dp"
          android:background="@color/project_config_item_selected_stroke_color" android:layout_height="match_parent"/>
    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
              android:id="@+id/open_pyr_project"
              android:clickable="true"
    android:layout_weight="1"
              android:textColor="@color/pyr_color"
              android:layout_margin="10dp"
              android:gravity="center"
              android:padding="10dp"
              android:background="@drawable/button_reverse_background_selector"
    android:text="post your requirements"/>
        </LinearLayout>
</LinearLayout>