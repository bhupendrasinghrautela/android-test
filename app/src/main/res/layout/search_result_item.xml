<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="8dp"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/search_result_item_header_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/search_result_item_header_image_view"
            android:layout_width="36dp"
            android:layout_height="36dp" />
        <TextView
            android:id="@+id/search_result_item_header_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="properties near my location" />
    </LinearLayout>
    <View
        android:id="@+id/search_result_item_separator_view"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/app_grey"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/search_result_item_property_image_view"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/search_result_item_property_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textSize="12sp"
            android:text="raheja vihar"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/search_result_item_property_image_view" />
        <TextView
            android:id="@+id/search_result_item_property_address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textSize="10sp"
            android:text="powai, mumbai"
            android:layout_below="@id/search_result_item_property_name_text_view"
            android:layout_toRightOf="@id/search_result_item_property_image_view" />
        <TextView
            android:id="@+id/search_result_item_property_type_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:text="locality"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


</LinearLayout>