<?xml version="1.0" encoding="utf-8"?>
<com.makaan.gallery.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_item_frame"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="0.5dp" >
    
    <include layout="@layout/proptiger_square_fading_network_image_view"/>

    <TextView
        android:id="@+id/grid_item_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/listingBlack"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        android:textColor="@color/white"
        android:textSize="12dp" />

</com.makaan.gallery.SquareLayout>