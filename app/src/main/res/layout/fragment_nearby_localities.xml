<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:font="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/locality_seperator_view"/>
    <com.makaan.ui.view.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/locality_kyn_margin_right"
        android:layout_marginRight="@dimen/locality_kyn_margin_right"
        android:layout_marginTop="@dimen/locality_kyn_margin_top"
        android:layout_marginBottom="@dimen/locality_kyn_margin_bottom"
        android:textColor="@color/white"
        android:textSize="@dimen/locality_text_bigger"
        android:typeface="monospace"
        font:fontName="comforta.ttf"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_nearby_localities_title"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_locality_nearby"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/locality_kyn_margin_bottom"
        >
         <com.makaan.ui.view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/locality_text_v_v_small"
            android:textColor="@color/white"
             font:fontName="proxima.otf"
            android:id="@+id/tv_localities_props_buy"
            android:text="@string/locality_switch_buy"
            />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/locality_switch_margin_left"
            android:layout_marginRight="@dimen/locality_switch_margin_left"
            android:thumb="@drawable/icon_switch_thumb"
            android:track="@drawable/icon_switch_track"
            android:id="@+id/switch_top_agents" />
        <com.makaan.ui.view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/locality_text_v_v_small"
            font:fontName="proxima.otf"
            android:textColor="@color/white"
            android:id="@+id/tv_localities_props_rent"
            android:text="@string/locality_switch_rent"
            />

    </LinearLayout>
<android.support.v7.widget.RecyclerView
    android:id="@+id/rv_nearby_localities"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/locality_nearby_localities_recycler_height"
    android:overScrollMode="never"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</LinearLayout>