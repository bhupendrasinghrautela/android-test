<?xml version="1.0" encoding="utf-8"?>
<com.makaan.jarvis.ui.cards.OutTextCard xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@null"
    android:paddingBottom="@dimen/out_text_card_padding_top_bottom"
    android:paddingTop="@dimen/out_text_card_padding_top_bottom" >


    <TextView
        android:id="@+id/txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:background="@drawable/bg_message_you"
        android:paddingBottom="@dimen/out_text_message_padding_top_bottom"
        android:paddingLeft="@dimen/out_text_message_padding_left"
        android:paddingRight="@dimen/out_text_message_padding_right"
        android:typeface="monospace"
        android:paddingTop="@dimen/out_text_message_padding_top_bottom"
        android:textColor="@color/white"
        android:textSize="@dimen/out_text_message_text_size"
        android:textAllCaps="false" />

</com.makaan.jarvis.ui.cards.OutTextCard>