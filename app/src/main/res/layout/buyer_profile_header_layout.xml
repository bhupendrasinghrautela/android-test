<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/header_height"
    android:gravity="center_vertical"
    app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
    android:paddingLeft="@dimen/header_margin">

    <com.pkmmte.view.CircularImageView
        android:id="@+id/iv_profile_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:tint="@color/white"
        android:src="@drawable/profile_pic"
        app:border="true"
        app:shadow="true" />

    <LinearLayout
        android:paddingTop="@dimen/profile_layout_padding"
        android:paddingBottom="@dimen/profile_layout_padding"
        android:paddingLeft="@dimen/profile_layout_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guest_text"
            android:textSize="@dimen/guest_text_size"/>
        <Button
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_outline_button_white"
            android:text="@string/login"
            android:layout_marginTop="@dimen/profile_layout_padding"
            android:layout_marginBottom="@dimen/profile_layout_padding"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</LinearLayout>