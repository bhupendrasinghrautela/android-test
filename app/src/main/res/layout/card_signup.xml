<?xml version="1.0" encoding="utf-8"?>

<!-- TODO WIP, hardcoded  dimen-->

<com.makaan.jarvis.ui.cards.SignupCard xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_width="@dimen/sign_up_card_width"
    android:layout_margin="@dimen/sign_up_card_margin"
    android:paddingTop="@dimen/sign_up_card_padding_top"
    android:paddingBottom="@dimen/sign_up_card_padding_bottom"
    android:gravity="center_horizontal"
    android:background="@drawable/chat_card_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/sign_up"
        android:textColor="@color/black"
        android:textSize="@dimen/sign_up_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/facebook_login_margin_top"
        android:layout_marginBottom="@dimen/facebook_login_margin_bottom"
        android:gravity="center">


        <ImageView
            android:id="@+id/fb_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/gmail_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/google_plus" />

    </LinearLayout>

    <TextView
        android:id="@+id/makaan_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/no_social_account"
        android:textColor="@color/appThemeRed"
        android:textSize="@dimen/no_social_account_text_size" />

</com.makaan.jarvis.ui.cards.SignupCard>