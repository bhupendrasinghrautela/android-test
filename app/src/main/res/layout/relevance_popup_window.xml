<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/relevance_popup_window_button_padding_bottom"
        android:paddingTop="@dimen/relevance_popup_window_button_padding_top">

        <Button
            android:id="@+id/relevance_popup_window_relevance_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/relevance_popup_window_button_height"
            android:paddingLeft="@dimen/relevance_popup_window_button_padding_right"
            android:paddingStart="@dimen/relevance_popup_window_button_padding_left"
            android:paddingRight="@dimen/relevance_popup_window_button_padding_right"
            android:paddingEnd="@dimen/relevance_popup_window_button_padding_left"
            android:background="@drawable/relevance_popup_item_background_selector"
            android:text="@string/relevance"
            android:textColor="@color/relevance_poup_window_text_color"
            android:textSize="@dimen/relevance_popup_window_text_size"
            android:textAllCaps="false"
            android:gravity="start|center_vertical"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/relevance_popup_window_price_high_to_low_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/relevance_popup_window_button_height"
            android:paddingLeft="@dimen/relevance_popup_window_button_padding_right"
            android:paddingStart="@dimen/relevance_popup_window_button_padding_left"
            android:paddingRight="@dimen/relevance_popup_window_button_padding_right"
            android:paddingEnd="@dimen/relevance_popup_window_button_padding_left"
            android:background="@drawable/relevance_popup_item_background_selector"
            android:text="price: high to low"
            android:textColor="@color/relevance_poup_window_text_color"
            android:textSize="@dimen/relevance_popup_window_text_size"
            android:textAllCaps="false"
            android:gravity="start|center_vertical"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/relevance_popup_window_price_low_to_high_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/relevance_popup_window_button_height"
            android:paddingLeft="@dimen/relevance_popup_window_button_padding_right"
            android:paddingStart="@dimen/relevance_popup_window_button_padding_left"
            android:paddingRight="@dimen/relevance_popup_window_button_padding_right"
            android:paddingEnd="@dimen/relevance_popup_window_button_padding_left"
            android:background="@drawable/relevance_popup_item_background_selector"
            android:text="price: low to high"
            android:textColor="@color/relevance_poup_window_text_color"
            android:textSize="@dimen/relevance_popup_window_text_size"
            android:textAllCaps="false"
            android:gravity="start|center_vertical"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/relevance_popup_window_seller_rating_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/relevance_popup_window_button_height"
            android:paddingLeft="@dimen/relevance_popup_window_button_padding_right"
            android:paddingStart="@dimen/relevance_popup_window_button_padding_left"
            android:paddingRight="@dimen/relevance_popup_window_button_padding_right"
            android:paddingEnd="@dimen/relevance_popup_window_button_padding_left"
            android:background="@drawable/relevance_popup_item_background_selector"
            android:text="seller rating"
            android:textColor="@color/relevance_poup_window_text_color"
            android:textSize="@dimen/relevance_popup_window_text_size"
            android:textAllCaps="false"
            android:gravity="start|center_vertical"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/relevance_popup_window_date_posted_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/relevance_popup_window_button_height"
            android:paddingLeft="@dimen/relevance_popup_window_button_padding_right"
            android:paddingStart="@dimen/relevance_popup_window_button_padding_left"
            android:paddingRight="@dimen/relevance_popup_window_button_padding_right"
            android:paddingEnd="@dimen/relevance_popup_window_button_padding_left"
            android:background="@drawable/relevance_popup_item_background_selector"
            android:text="date posted"
            android:textColor="@color/relevance_poup_window_text_color"
            android:textSize="@dimen/relevance_popup_window_text_size"
            android:textAllCaps="false"
            android:gravity="start|center_vertical"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/relevance_popup_window_livability_score_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/relevance_popup_window_button_height"
            android:paddingLeft="@dimen/relevance_popup_window_button_padding_right"
            android:paddingStart="@dimen/relevance_popup_window_button_padding_left"
            android:paddingRight="@dimen/relevance_popup_window_button_padding_right"
            android:paddingEnd="@dimen/relevance_popup_window_button_padding_left"
            android:background="@drawable/relevance_popup_item_background_selector"
            android:text="livability score"
            android:textColor="@color/relevance_poup_window_text_color"
            android:textSize="@dimen/relevance_popup_window_text_size"
            android:textAllCaps="false"
            android:gravity="start|center_vertical"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/relevance_popup_window_distance_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/relevance_popup_window_button_height"
            android:paddingLeft="@dimen/relevance_popup_window_button_padding_right"
            android:paddingStart="@dimen/relevance_popup_window_button_padding_left"
            android:paddingRight="@dimen/relevance_popup_window_button_padding_right"
            android:paddingEnd="@dimen/relevance_popup_window_button_padding_left"
            android:background="@drawable/relevance_popup_item_background_selector"
            android:text="distance"
            android:textColor="@color/relevance_poup_window_text_color"
            android:textSize="@dimen/relevance_popup_window_text_size"
            android:textAllCaps="false"
            android:gravity="start|center_vertical"
            style="?android:attr/borderlessButtonStyle"
            android:visibility="gone"/>
    </LinearLayout>
</android.support.v7.widget.CardView>