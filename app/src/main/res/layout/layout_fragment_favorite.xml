<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/favorite_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_no_shortlist"
        android:textSize="@dimen/button_text_size"
        android:text="@string/no_favorite_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"/>

    <ProgressBar
        android:id="@+id/loading_progress"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/progressbar_color"
        android:layout_width="@dimen/progressbar_medium"
        android:layout_height="@dimen/progressbar_medium"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout>