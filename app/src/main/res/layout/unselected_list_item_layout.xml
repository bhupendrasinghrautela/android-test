<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/unselected_list_item_height"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/unselected_list_item_padding_left"
        android:layout_weight="1"
        android:textSize="@dimen/unselected_list_item_text_size"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/add_text_padding"
        android:text="@string/add_text"
        android:textSize="@dimen/add_text_size"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/add_text_margin_left"
        android:layout_marginRight="@dimen/add_text_margin_right"
        />

</LinearLayout>