<?xml version="1.0" encoding="utf-8"?>
<com.makaan.ui.PriceTrendView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/price_trend_view"
    android:orientation="vertical"
    android:background="@color/white"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:padding="@dimen/city_internal_padding"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/header_text"
        android:gravity="center"
        android:textSize="@dimen/city_header_text"
        android:text="@string/price_trends"
        android:textColor="@color/listingBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/price_range_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabGravity="fill" />
    <include layout="@layout/line_chart_view_layout"/>

</com.makaan.ui.PriceTrendView>