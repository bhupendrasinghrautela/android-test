<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/project_config_item_seperator"
        />
<LinearLayout
    android:orientation="horizontal" android:layout_width="match_parent"
    android:weightSum="2"
    android:layout_margin="@dimen/project_config_item_margin"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_properties"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_project_config_item_properties"
        android:textColor="@color/project_similar_projects_red"
        android:text="view properties"
        android:textSize="@dimen/project_text_v_small"
        />


</LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_call_sellers"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_project_config_item_seller"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/project_similar_projects_red"
            android:text="view properties"
            android:textSize="@dimen/project_text_v_small"
            />

    </LinearLayout>
</LinearLayout>
</LinearLayout>