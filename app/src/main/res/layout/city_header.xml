<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
        <TextView
            android:id="@+id/annual_growth_text"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/city_header_margin_left"
            android:textSize="@dimen/city_normal_text"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/rental_growth_text"
            android:layout_width="wrap_content"
            android:textSize="@dimen/city_normal_text"
            android:layout_marginRight="@dimen/city_header_margin_right"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@id/annual_growth_text"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/city_header_margin_left"
            android:textColor="@color/white"
            android:text="@string/annual_growth"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@id/rental_growth_text"
            android:layout_marginRight="@dimen/city_header_margin_right"
            android:layout_alignParentRight="true"
            android:text="@string/rental_yield"
            android:layout_height="wrap_content"/>
</RelativeLayout>