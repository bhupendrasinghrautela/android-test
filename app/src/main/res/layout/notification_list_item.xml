<?xml version="1.0" encoding="utf-8"?>
<com.makaan.ui.buyerjourney.NotificationCard
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_card_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/notifications_padding"
    android:background="@android:color/white">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey_text"
                android:textSize="@dimen/notification_card_title_text_size"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/notification_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey_text"
                android:textSize="@dimen/notification_card_desc_text_size"
                android:typeface="serif" />

            <com.android.volley.toolbox.FadeInNetworkImageView
                android:id="@+id/iv_notifications"
                android:layout_width="match_parent"
                android:layout_height="@dimen/notifications_image_height"
                android:padding="@dimen/notifications_image_padding"
                android:contentDescription="@string/app_name"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:textSize="@dimen/notification_card_font_size_small" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:padding="@dimen/notification_card_delete_icon_padding"
                android:src="@drawable/delete_selected_icon"
                android:visibility="gone"/>
        </LinearLayout>


</com.makaan.ui.buyerjourney.NotificationCard>

