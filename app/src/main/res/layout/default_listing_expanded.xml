<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/default_listing_extended_top_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:padding="6dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/card_elevation_small"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/default_listing_extended_property_info_relative_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/default_listing_extended_property_image_relative_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/default_listing_extended_property_image_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:padding="6dp"
                            android:scaleType="fitStart"
                            android:src="@drawable/temp_bulding" />

                        <TextView
                            android:id="@+id/default_listing_extended_property_price_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="28dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/colorAccent"
                            android:gravity="center_vertical|right"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:text="\u20B9 2.82 cr"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/default_listing_extended_property_price_sqft_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/default_listing_extended_property_price_text_view"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="6dp"
                            android:gravity="center_vertical|right"
                            android:text="\u20B9 4,552 / sq ft"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/default_listing_extended_property_image_count_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/default_listing_extended_property_image_view"
                            android:layout_marginBottom="28dp"
                            android:layout_marginLeft="24dp"
                            android:gravity="center_vertical|left"
                            android:text="1/20"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/default_listing_extended_rouded_frame_image_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/rouded_frame_image_view" />
                    </RelativeLayout>
                </FrameLayout>

                <TextView
                    android:id="@+id/default_listing_extended_property_type_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/default_listing_extended_property_image_relative_layout"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:text="2 bhk apartment"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/default_listing_extended_property_area_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/default_listing_extended_property_image_relative_layout"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@id/default_listing_extended_property_type_text_view"
                    android:text="1,900 sq ft"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/default_listing_extended_property_address_1_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/default_listing_extended_property_type_text_view"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="4dp"
                    android:text="skylark ithaca"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/default_listing_extended_property_address_2_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/default_listing_extended_property_address_1_text_view"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="2dp"
                    android:text="golf course extn, gurgaon"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/default_listing_extended_property_shortlist_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/default_listing_extended_property_address_2_text_view"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="6dp" />

            </RelativeLayout><!--

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </RelativeLayout>-->
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/default_listing_extended_property_info_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/cardview_light_background"
        android:padding="6dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/card_elevation_small"></android.support.v7.widget.CardView>
</LinearLayout>