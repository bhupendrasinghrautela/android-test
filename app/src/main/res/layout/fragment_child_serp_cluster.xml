<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/fragment_child_serp_cluster_top_relative_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/app_red">

        <FrameLayout
            android:id="@+id/fragment_child_serp_cluster_back_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_search_base_layout_search_bar_back_layout_padding_left"
            android:paddingStart="@dimen/activity_search_base_layout_search_bar_back_layout_padding_left"
            android:paddingRight="@dimen/activity_search_base_layout_search_bar_back_layout_padding_right"
            android:paddingEnd="@dimen/activity_search_base_layout_search_bar_back_layout_padding_right">
            <Button
                android:id="@+id/fragment_child_serp_cluster_back_button"
                android:layout_width="@dimen/activity_search_base_layout_search_bar_back_button_width"
                android:layout_height="@dimen/activity_search_base_layout_search_bar_back_button_height"
                android:layout_marginTop="@dimen/activity_search_base_layout_search_bar_back_button_margin_top"
                android:layout_marginBottom="@dimen/activity_search_base_layout_search_bar_back_button_margin_bottom"
                android:background="@drawable/back_arrow_white" />
        </FrameLayout>
        <TextView
            android:id="@+id/fragment_child_serp_cluster_info_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/similar_properties"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="4dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fragment_child_serp_cluster_relative_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_child_serp_cluster_top_relative_view"
        android:paddingLeft="@dimen/fragment_child_serp_cluster_relative_view_padding_left"
        android:paddingStart="@dimen/fragment_child_serp_cluster_relative_view_padding_left"
        android:paddingRight="@dimen/fragment_child_serp_cluster_relative_view_padding_right"
        android:paddingEnd="@dimen/fragment_child_serp_cluster_relative_view_padding_right"
        android:paddingTop="@dimen/fragment_child_serp_cluster_relative_view_padding_top"
        android:paddingBottom="@dimen/fragment_child_serp_cluster_relative_view_padding_bottom"
        android:background="@color/white">
        <ImageView
            android:id="@+id/fragment_child_serp_cluster_left_arrow_image_view"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/arrow_left"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/fragment_child_serp_cluster_right_arrow_image_view"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/arrow_right"
            android:layout_centerVertical="true"/>
        <com.makaan.ui.view.CustomViewPager
            android:id="@+id/fragment_child_serp_cluster_view_pager"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fragment_child_serp_cluster_view_pager_height"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/fragment_child_serp_cluster_left_arrow_image_view"
            android:layout_toEndOf="@id/fragment_child_serp_cluster_left_arrow_image_view"
            android:layout_toLeftOf="@id/fragment_child_serp_cluster_right_arrow_image_view"
            android:layout_toStartOf="@id/fragment_child_serp_cluster_right_arrow_image_view" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/fragment_child_serp_cluster_relative_view"
        android:background="@color/serp_listing_view_empty_view_color"  />
</RelativeLayout>