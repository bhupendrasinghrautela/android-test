<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="299dp"
    android:layout_marginLeft="20dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/locality_hero"
        android:scaleType="centerCrop"
        android:id="@+id/iv_nearby_locality"
        android:layout_height="229dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Koramangala"
            android:textSize="24sp"
            android:singleLine="true"
            android:layout_below="@id/iv_nearby_locality"
            android:textColor="#444444"
            android:id="@+id/tv_nearby_localities_name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="24dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="median price 24,000 sq ft"
            android:textSize="16sp"
            android:textColor="#444444"
            android:id="@+id/tv_nearby_localities_median"
            android:layout_below="@id/tv_nearby_localities_name"
            android:layout_alignLeft="@id/tv_nearby_localities_name"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="190 + "
            android:textSize="24sp"
            android:paddingRight="10dp"
            android:id="@+id/tv_nearby_localities_sale"
            android:textColor="#444444"
            android:layout_below="@id/tv_nearby_localities_median"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@id/tv_nearby_localities_name"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="1498 + "
            android:textSize="24sp"
            android:textColor="#444444"
            android:id="@+id/tv_nearby_localities_rent"
            android:layout_below="@id/tv_nearby_localities_median"
            android:layout_alignTop="@+id/tv_nearby_localities_sale"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="properties for rent"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_below="@id/tv_nearby_localities_rent"
            android:layout_alignRight="@id/tv_nearby_localities_rent"
            android:layout_alignLeft="@id/tv_nearby_localities_rent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="properties for sale"
            android:textSize="14sp"
            android:textColor="#444444"
            android:id="@+id/tv_nearby_localities_sale_label"
            android:layout_below="@id/tv_nearby_localities_sale"
            android:layout_alignRight="@id/tv_nearby_localities_sale"
            android:layout_alignLeft="@id/tv_nearby_localities_sale"
            />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:textColor="#e71c28"
    android:text="view details"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/tv_nearby_localities_sale_label"
    android:id="@+id/tv_nearby_localities_detail"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="20dp"
    />
    </RelativeLayout>
</android.support.v7.widget.CardView>