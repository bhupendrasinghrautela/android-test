<?xml version="1.0" encoding="utf-8"?>
<com.makaan.ui.amenity.AmenityCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/amenity_card_view"
    android:background="@drawable/amenity_card_bg"
    android:layout_width="280dp"
    android:layout_margin="20dp"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="@dimen/amenity_card_corner_radius"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/amenity_logo"
            android:layout_width="@dimen/amenity_type_logo_dimen"
            android:layout_height="@dimen/amenity_type_logo_dimen"
            android:layout_marginTop="@dimen/amenity_margin_top"
            android:src="@drawable/placeholder_amenity"
            android:layout_marginBottom="@dimen/amenity_type_logo_margin"/>

        <TextView
            android:id="@+id/amenity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/amenity_title_color"
            android:textSize="@dimen/amenity_type_text_size"/>

        <LinearLayout
            android:id="@+id/amenity_list"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/amenity_margin_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/placeholder_see_on_map"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="see on map"
            android:textColor="#e71c28"
            android:layout_marginLeft="5dp"
            />


    </LinearLayout>

    </LinearLayout>



</com.makaan.ui.amenity.AmenityCardView>