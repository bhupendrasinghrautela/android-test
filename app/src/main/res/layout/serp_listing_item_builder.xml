<?xml version="1.0" encoding="utf-8"?>
<com.makaan.ui.listing.BuilderListingView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/serp_listing_item_builder_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp">
    <ImageView
        android:id="@+id/serp_listing_item_builder_background_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/serp_listing_item_builder_image_card_view"
            android:layout_width="@dimen/serp_listing_item_builder_image_card_view_width"
            android:layout_height="@dimen/serp_listing_item_builder_image_card_view_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/serp_listing_item_builder_image_card_view_margin_top"
            app:cardCornerRadius="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/serp_listing_item_builder_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/serp_listing_item_builder_image_card_view_width"
                    android:maxHeight="@dimen/serp_listing_item_builder_image_card_view_height"
                    android:src="@drawable/property"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/serp_listing_item_builder_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/serp_listing_item_builder_name_text_view_margin_top"
            android:text="dlf builder"
            android:textColor="@color/white"
            android:textSize="@dimen/serp_listing_item_builder_name_text_view_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/serp_listing_item_builder_empty_view_height"
            android:layout_marginEnd="@dimen/serp_listing_item_builder_empty_view_margin_right"
            android:layout_marginLeft="@dimen/serp_listing_item_builder_empty_view_margin_left"
            android:layout_marginRight="@dimen/serp_listing_item_builder_empty_view_margin_right"
            android:layout_marginStart="@dimen/serp_listing_item_builder_empty_view_margin_left"
            android:layout_marginTop="@dimen/serp_listing_item_builder_empty_view_margin_top"
            android:background="@color/serp_listing_item_builder_empty_view_background_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/serp_listing_item_builder_info_margin_bottom"
            android:layout_marginTop="@dimen/serp_listing_item_builder_info_margin_top"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/serp_listing_item_builder_experience_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12yrs"
                    android:textColor="@color/white"
                    android:textSize="@dimen/serp_listing_item_builder_info_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/serp_listing_item_builder_ongoing_projects_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/serp_listing_item_builder_info_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="experience"
                    android:textColor="@color/white"
                    android:textSize="@dimen/serp_listing_item_builder_text_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ongoing projects"
                    android:textColor="@color/white"
                    android:textSize="@dimen/serp_listing_item_builder_text_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/serp_listing_item_builder_info_margin_bottom"
            android:layout_marginTop="@dimen/serp_listing_item_builder_info_margin_top"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/serp_listing_item_builder_past_projects_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textColor="@color/white"
                    android:textSize="@dimen/serp_listing_item_builder_info_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/serp_listing_item_builder_avg_delay_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90%"
                    android:textColor="@color/white"
                    android:textSize="@dimen/serp_listing_item_builder_info_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/serp_listing_item_builder_info_margin_bottom2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="past projects"
                    android:textColor="@color/white"
                    android:textSize="@dimen/serp_listing_item_builder_text_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="avg. delay"
                    android:textColor="@color/white"
                    android:textSize="@dimen/serp_listing_item_builder_text_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.makaan.ui.listing.BuilderListingView>