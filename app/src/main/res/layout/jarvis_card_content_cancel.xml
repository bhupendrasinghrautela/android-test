<?xml version="1.0" encoding="utf-8"?>
<com.makaan.jarvis.ui.cards.RichContentCard xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/jarvis_card_brief_height"
    android:background="@drawable/chat_card"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/jarvis_card_brief_height">

        <com.android.volley.toolbox.FadeInNetworkImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_card_rounded_corner_gray_bg"
            android:layout_margin="4dp"/>


        <TextView
            android:id="@+id/txt_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="6dp"
            android:padding="8dp"
            android:background="#80000000"
            android:maxLines="2"
            android:textColor="@android:color/white"
            android:typeface="monospace"
            android:textSize="@dimen/jarvis_chat_card_subtitle_text_size"
            android:textAllCaps="false" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape"
            android:padding="10dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/jarvis_chat_button_layout_margin_top"
        android:layout_marginBottom="@dimen/jarvis_chat_button_layout_margin_small_bottom">


        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/jarvis_chat_card_button_height"
            android:background="@drawable/round_red"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:clickable="true"
            android:text="cancel"
            android:textColor="@color/app_red"
            android:textSize="@dimen/jarvis_chat_card_button_text_size"
            android:textAllCaps="false" />

    </LinearLayout>


</com.makaan.jarvis.ui.cards.RichContentCard>
