<?xml version="1.0" encoding="utf-8"?>

<com.makaan.ui.listing.DefaultListingView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_gravity="center"
    app:cardCornerRadius="25dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    app:cardPreventCornerOverlap="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.android.volley.toolbox.FadeInNetworkImageView
            android:id="@+id/buyer_dashboard_listing_view_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"/>
        <TextView
            android:id="@+id/buyer_dashboard_listing_view_address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:singleLine="true"
            android:typeface="monospace"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/buyer_dashboard_listing_view_project_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_alignLeft="@id/buyer_dashboard_listing_view_address_text_view"
            android:layout_alignStart="@id/buyer_dashboard_listing_view_address_text_view"
            android:layout_above="@id/buyer_dashboard_listing_view_address_text_view"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:singleLine="true"
            android:typeface="monospace"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/buyer_dashboard_listing_view_price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_alignLeft="@id/buyer_dashboard_listing_view_address_text_view"
            android:layout_alignStart="@id/buyer_dashboard_listing_view_address_text_view"
            android:layout_above="@id/buyer_dashboard_listing_view_project_text_view"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:singleLine="true"
            android:typeface="monospace"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="42sp"/>
    </RelativeLayout>
</com.makaan.ui.listing.DefaultListingView>