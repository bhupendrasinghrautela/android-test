<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/buy_rent_tab_background_margin_top"
        android:layout_marginBottom="@dimen/buy_rent_tab_background_margin_bottom"
        android:layout_marginLeft="@dimen/buy_rent_tab_background_margin_left"
        android:layout_marginRight="@dimen/buy_rent_tab_background_margin_right"
        android:background="@drawable/pyr_buy_rent_background_drawable"/>
<RadioGroup
    android:id="@+id/buy_rent_radiogroup"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pyr_buy_button_height"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:checkedButton="@+id/pyr_buy"
    android:clipToPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RadioButton
        android:id = "@+id/buy"
        android:button="@color/transparent"
        android:background="@drawable/pyr_buy_background_style"
        android:layout_width="@dimen/pyr_buy_button_width"
        android:text="@string/pyr_buy"
        android:textSize="@dimen/pyr_buy_rent_text_size"
        android:gravity="center"
        android:layout_height="match_parent"
        android:textColor="@drawable/pyr_buy_text_style"
        android:checked="true">
    </RadioButton>

    <RadioButton
        android:id = "@+id/rent"
        android:background="@drawable/pyr_buy_background_style"
        android:button="@color/transparent"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="@string/pyr_rent"
        android:textSize="@dimen/pyr_buy_rent_text_size"
        android:checked="false"
        android:textColor="@drawable/pyr_buy_text_style"
        android:layout_height="match_parent"
        >
    </RadioButton>
</RadioGroup>
</FrameLayout>

