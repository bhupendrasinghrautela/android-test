<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="299dp"
    android:layout_marginLeft="20dp"
    android:layout_height="500dp"
    app:cardCornerRadius="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/iv_localitites_props"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_lifestyle"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/tv_localities_props_label"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:text="Luxury properties Rs. 1.2 Cr onwards"
            android:textColor="@color/white"
            />
    </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/tv_localities_lifestyle_description"
            android:layout_margin="16sp"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:text="Luxury properties Rs. 1.2 Cr onwards"
            android:ellipsize="marquee"
            android:lines="12"
            android:textColor="#444"

            />
    </LinearLayout>
</android.support.v7.widget.CardView>