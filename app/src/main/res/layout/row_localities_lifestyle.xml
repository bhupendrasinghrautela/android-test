<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="299dp"
    xmlns:font="http://schemas.android.com/tools"
    android:layout_marginLeft="20dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/iv_localitites_props"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_lifestyle"
            />
        <com.makaan.ui.view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/locality_text_big"
            font:fontName="comforta.ttf"
            android:id="@+id/tv_localities_props_label"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:text="Luxury properties Rs. 1.2 Cr onwards"
            android:textColor="@color/white"
            />
    </RelativeLayout>
        <com.makaan.ui.view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/locality_text_small"
            android:id="@+id/tv_localities_lifestyle_description"
            android:layout_margin="@dimen/locality_text_medium"
            font:fontName="proxima.otf"
            android:gravity="left"
            android:layout_centerInParent="true"
            android:text="Luxury properties Rs. 1.2 Cr onwards"
            android:ellipsize="marquee"
            android:maxLines="12"
            android:textColor="@color/project_text_default"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>