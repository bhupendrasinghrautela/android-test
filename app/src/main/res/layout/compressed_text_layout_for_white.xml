<?xml version="1.0" encoding="utf-8"?>
<com.makaan.ui.CompressedTextView
    android:id="@+id/compressed_text_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/property_empty_view"/>
    <TextView
        android:id="@+id/content_text"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/property_page_description_margin_left"
        android:layout_marginRight="@dimen/property_page_description_margin_right"
        android:layout_marginTop="@dimen/property_page_description_margin_top"
        android:typeface="serif"
        android:textColor="@color/listingBlack"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/read_more"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/property_page_description_margin_left"
        android:layout_marginRight="@dimen/property_page_description_margin_right"
        android:layout_marginBottom="@dimen/property_page_description_margin_bottom"
        android:typeface="serif"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:text="@string/read_more"/>
</com.makaan.ui.CompressedTextView>