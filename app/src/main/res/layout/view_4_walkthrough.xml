<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/with_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/with_you"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
    />
    <ImageView
        android:id="@+id/throughout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/throughout"
        android:layout_marginTop="70dp"
        android:layout_gravity="center_horizontal"
    />
    <ImageView
        android:id="@+id/small_cloud"
        android:layout_width="80dp"
        android:layout_marginTop="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/cloud"
    />
    <ImageView
        android:id="@+id/big_cloud"
        android:layout_width="150dp"
        android:layout_marginTop="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"
        android:background="@drawable/cloud"
    />
    <ImageView
        android:id="@+id/family"
        android:layout_width="280dp"
        android:layout_height="165dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="40dp"
        android:background="@drawable/family_on_cycle"
    />
    <ImageView
        android:id="@+id/path"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="80dp"
        android:background="@drawable/dotted_path"
    />
</FrameLayout>