    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/activity_search_base_layout_search_bar_background_color">

        <Button
            android:id="@+id/activity_base_buyer_journey_layout_back_button"
            android:layout_width="@dimen/activity_base_buyer_journey_layout_back_button_width"
            android:layout_height="@dimen/activity_base_buyer_journey_layout_back_button_height"
            android:layout_marginTop="@dimen/activity_base_buyer_journey_layout_back_button_margin_top"
            android:layout_marginBottom="@dimen/activity_base_buyer_journey_layout_back_button_margin_bottom"
            android:layout_marginLeft="@dimen/activity_base_buyer_journey_layout_back_button_margin_left"
            android:layout_marginStart="@dimen/activity_base_buyer_journey_layout_back_button_margin_left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/back_arrow_white" />

        <com.pkmmte.view.CircularImageView
            android:id="@+id/activity_base_buyer_journey_layout_user_image_view"
            android:layout_width="@dimen/activity_base_buyer_journey_layout_user_image_view_width"
            android:layout_height="@dimen/activity_base_buyer_journey_layout_user_image_view_height"
            android:layout_marginRight="@dimen/activity_base_buyer_journey_layout_user_image_view_margin_right"
            android:layout_marginEnd="@dimen/activity_base_buyer_journey_layout_user_image_view_margin_right"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/activity_base_buyer_journey_layout_type_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/activity_base_buyer_journey_layout_back_button"
            android:layout_toEndOf="@id/activity_base_buyer_journey_layout_back_button"
            android:layout_toLeftOf="@id/activity_base_buyer_journey_layout_user_image_view"
            android:layout_toStartOf="@id/activity_base_buyer_journey_layout_user_image_view"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="unit booking"
            android:textSize="@dimen/activity_base_buyer_journey_layout_user_type_text_view_text_size"/>
