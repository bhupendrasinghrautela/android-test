<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="@dimen/edit_profile_left_padding"
    android:paddingRight="@dimen/edit_profile_left_padding"
    android:paddingTop="@dimen/edit_profile_top_padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/fragment_buyer_edit_profile">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_account"
            android:textColor="@color/my_account_grey"
            android:textSize="@dimen/edit_profile_text_size_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_top_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/input_top_margin"
                    android:background="@drawable/edittext_bg_bottom_border"
                    android:hint="@string/name"
                    android:paddingBottom="@dimen/edit_internal_padding"
                    android:paddingTop="@dimen/edit_internal_padding"
                    android:singleLine="true"
                    android:textSize="@dimen/average_text" />

            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/iv_edit_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/til_name"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/app_name"
                android:src="@android:drawable/ic_menu_edit" />

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/til_top_padding"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/input_top_margin"
                android:background="@drawable/edittext_bg_bottom_border"
                android:hint="@string/email"
                android:paddingBottom="@dimen/edit_internal_padding"
                android:paddingTop="@dimen/edit_internal_padding"
                android:singleLine="true"
                android:textSize="@dimen/average_text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/til_top_padding"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/et_contact_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/input_top_margin"
                android:background="@drawable/edittext_bg_bottom_border"
                android:hint="@string/contact_number"
                android:inputType="number"
                android:paddingBottom="@dimen/edit_internal_padding"
                android:paddingTop="@dimen/edit_internal_padding"
                android:singleLine="true"
                android:textSize="@dimen/average_text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/til_top_padding"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/et_current_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/input_top_margin"
                android:background="@drawable/edittext_bg_bottom_border"
                android:hint="@string/current_password"
                android:paddingBottom="@dimen/edit_internal_padding"
                android:paddingTop="@dimen/edit_internal_padding"
                android:singleLine="true"
                android:textSize="@dimen/average_text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/til_top_padding"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/input_top_margin"
                android:background="@drawable/edittext_bg_bottom_border"
                android:hint="@string/new_password"
                android:paddingBottom="@dimen/edit_internal_padding"
                android:paddingTop="@dimen/edit_internal_padding"
                android:singleLine="true"
                android:textSize="@dimen/average_text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/til_top_padding"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/input_top_margin"
                android:background="@drawable/edittext_bg_bottom_border"
                android:hint="@string/confirm_password"
                android:paddingBottom="@dimen/edit_internal_padding"
                android:paddingTop="@dimen/edit_internal_padding"
                android:singleLine="true"
                android:textSize="@dimen/average_text" />
        </android.support.design.widget.TextInputLayout>

        <FrameLayout
            android:layout_marginTop="@dimen/save_profile_top_margin"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_profile_save_button_selector">

            <Button
                android:id="@+id/btn_save"
                android:paddingRight="@dimen/save_button_padding"
                android:paddingLeft="@dimen/save_button_padding"
                android:background="?android:selectableItemBackground"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textSize="@dimen/average_text"/>
        </FrameLayout>

</LinearLayout>
