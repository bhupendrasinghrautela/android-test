<?xml version="1.0" encoding="utf-8"?>

    <com.makaan.ui.view.DefaultListingView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/default_listing_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/card_elevation_small"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/cardview_light_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:id="@+id/default_listing_property_image_image_view"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/temp_bulding"
                    android:scaleType="centerCrop"/>
                <com.pkmmte.view.CircularImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/default_listing_property_image_image_view"
                    android:layout_marginLeft="2dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="-20dp"
                    android:id="@+id/default_listing_seller_image_view"
                    android:src="@drawable/temp_builder"
                    app:border="true"
                    app:border_color="@color/light_gray"
                    app:border_width="@dimen/border_width"
                    app:shadow="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 months ago"
                    android:layout_below="@id/default_listing_property_image_image_view"
                    android:id="@+id/default_listing_property_since_duration_text_view"
                    android:layout_alignRight="@id/default_listing_property_image_image_view"
                    android:textSize="10sp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/try_dashed"
                    android:paddingBottom="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/default_listing_property_info_relative_layout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 bhk - "
                        android:layout_alignParentLeft="true"
                        android:id="@+id/default_listing_property_type_text_view"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_toRightOf="@+id/default_listing_property_type_text_view"
                        android:id="@+id/default_listing_property_rating_image_view"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/makaan_outline"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\u24D8"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:id="@+id/default_listing_property_price_tnc_text_view"
                        android:textSize="10sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/default_listing_property_price_text_view"
                        android:text="\u20B9 89l"
                        android:layout_toLeftOf="@id/default_listing_property_price_tnc_text_view"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>
                </RelativeLayout>
                <View
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/black"
                    android:layout_below="@id/default_listing_property_info_relative_layout"
                    android:id="@+id/default_listing_empty_layout_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:text="I puzhal, chennai north, chennai"
                    android:layout_below="@id/default_listing_empty_layout_1"
                    android:id="@+id/default_listing_property_address_text_view"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/black"
                    android:layout_below="@id/default_listing_property_address_text_view"
                    android:id="@+id/default_listing_empty_layout_2"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/default_listing_empty_layout_2"
                    android:id="@+id/default_listing_more_info_relative_layout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="5dp"
                        android:text="10th"
                        android:id="@+id/default_listing_property_floor_text_view"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Floor"
                        android:layout_below="@id/default_listing_property_floor_text_view"
                        android:textSize="10sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="50dp"
                        android:text="2"
                        android:id="@+id/default_listing_property_bathroom_text_view"
                        android:layout_toRightOf="@id/default_listing_property_floor_text_view"
                        android:layout_alignParentTop="true"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="Bathroom"
                        android:layout_toRightOf="@id/default_listing_property_floor_text_view"
                        android:layout_below="@id/default_listing_property_bathroom_text_view"
                        android:textSize="10sp"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/default_listing_call_image_view"
                    android:src="@drawable/whatsapp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toLeftOf="@id/default_listing_call_image_view"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/default_listing_quick_view_image_view"
                    android:src="@drawable/quick_view"/>
            </RelativeLayout>
        </LinearLayout>
    </com.makaan.ui.view.DefaultListingView>