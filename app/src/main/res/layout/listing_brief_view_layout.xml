<?xml version="1.0" encoding="utf-8"?>

<com.makaan.ui.listing.ListingCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardElevation="6dp">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.android.volley.toolbox.FadeInNetworkImageView
                android:id="@+id/thumbnail"
                android:layout_width="0dp"
                android:layout_weight="0.45"
                android:layout_height="@dimen/thumbnail_height"
                android:layout_marginRight="@dimen/thumbnail_margin"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.55"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/listing_header_left_padding"
                android:paddingRight="@dimen/listing_header_right_padding"
                android:paddingTop="@dimen/listing_header_top_padding"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="0dp"
                        android:layout_weight="0.75"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textSize="@dimen/listing_header_price_size"
                        android:textColor="@color/listingBlack"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/listing_header_unit_area"
                    android:textColor="@color/listingGray"/>

                <TextView
                    android:id="@+id/size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/listing_header_unit_area"
                    android:textColor="@color/listingLightGray"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/listing_header_locality_top_margin"
                    android:textSize="@dimen/listing_header_locality_size"
                    android:textColor="@color/listingLightGray"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.349"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/triangle_height"
                    android:layout_gravity="start"
                    android:rotation="180"
                    android:background="@drawable/triangle"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.501"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </FrameLayout>


</LinearLayout>

</com.makaan.ui.listing.ListingCardView>