<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="299dp"
    xmlns:font="http://schemas.android.com/tools"
    android:layout_marginLeft="20dp"
    android:layout_height="234dp"
    app:cardCornerRadius="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iv_localitites_props"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_localities_props"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
            <com.makaan.ui.view.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                font:fontName="proxima.otf"
                android:id="@+id/tv_localities_props_label_type"
                android:gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:text="Luxury properties Rs. 1.2 Cr onwards"
                android:textColor="@color/white"
                />
            <com.makaan.ui.view.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                font:fontName="proxima.otf"
                android:id="@+id/tv_localities_props_label"
                android:gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:text="Luxury properties Rs. 1.2 Cr onwards"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>