<?xml version="1.0" encoding="utf-8"?>

<!--TODO :: hardcoded values, work in progress-->

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/tools"
    android:layout_width="299dp"
    android:layout_height="234dp"
    android:layout_marginLeft="20dp"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_localitites_props"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/locality_placeholder" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#60000000" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.makaan.ui.view.FontTextView
                android:id="@+id/tv_localities_props_label_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Luxury properties Rs. 1.2 Cr onwards"
                android:textColor="@color/white"
                android:textSize="18sp"
                font:fontName="proxima.otf" />

            <com.makaan.ui.view.FontTextView
                android:id="@+id/tv_localities_props_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Luxury properties Rs. 1.2 Cr onwards"
                android:textColor="@color/white"
                android:textSize="16sp"
                font:fontName="proxima.otf" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>