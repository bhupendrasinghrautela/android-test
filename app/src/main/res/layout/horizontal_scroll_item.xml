<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <com.android.volley.toolbox.FadeInNetworkImageView
        android:id="@+id/image"
        android:layout_width="@dimen/amenities_horizontal_scroll_item_dimen"
        android:layout_height="@dimen/amenities_horizontal_scroll_item_dimen"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/possession" />

    <com.makaan.ui.view.FontTextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="aug, 2017"
        android:textColor="@color/serp_listing_card_default_text_color"
        android:textSize="@dimen/project_text_small"
        android:typeface="monospace" />

    <com.makaan.ui.view.FontTextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/serp_listing_card_property_detail_info_text_color"
        android:textSize="@dimen/project_text_v_small"
        android:typeface="serif" />
</LinearLayout>