<resources>>

    <style name="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/status_bar_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:homeAsUpIndicator">@drawable/back_arrow_white</item>
        <item name="homeAsUpIndicator">@drawable/back_arrow_white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:spinnerStyle">@style/SpinnerStyle</item>
        <item name="android:alertDialogTheme">@style/MyAlertDialogTheme</item>
    </style>
    <style name="MyAlertDialogTheme" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="colorAccent">@color/app_red</item>
